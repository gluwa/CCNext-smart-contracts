{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "**/__tests__/*", "dist"],

    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "compilerOptions": {
            "rootDir": "."
        }
    }
}
